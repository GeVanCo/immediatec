#!/usr/bin/ksh -p

########################################################################
#
#	make pptc with OPT=TCP
#
#	$Id: makepptc,v 1.2 2001/01/25 21:53:13 jw Exp $
#
########################################################################

if [[ -f Make_tmp ]]; then
    echo 'Error makepptc: Make_tmp exists as file ??? - nothing made' >&2
    exit 1;
fi
test -d Make_tmp || mkdir Make_tmp;
mv main.o Make_tmp
if [[ -d PptcObjs ]]; then
    mv PptcObjs/* .
else
    mkdir PptcObjs
fi
make OPT='-DTCP' pptc
mv main.o pptc.o PptcObjs
mv Make_tmp/* .
rmdir Make_tmp
