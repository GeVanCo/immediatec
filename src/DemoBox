#!/usr/bin/perl
########################################################################
#
#	Example 14-1 Simple UI Code
#	Sriram Srinivasan: Advanced Perl p. 224
#
########################################################################

use Tk;					# Slurp the module in

########################################################################
#
#	Create main window
#
########################################################################

$top = MainWindow->new();
$top->title("Simple");

########################################################################
#
#	Generate a 2 buttons
#
########################################################################

$button1 = $top->Button(
    text	=> 'John',
    command	=> sub {	# use a closure
	$button1->cget('text') eq 'John' ?
	    $button1->configure(text => 'Helene') :
	    $button1->configure(text => 'John');
    }
);
$button1->pack;	# give it a default place in the main window

$button2 = $top->Button(
    text	=> 'John',
    command	=> sub {	# use a closure
	$button2->cget('text') eq 'John' ?
	    $button2->configure(text => 'David') :
	    $button2->configure(text => 'John');
    }
);
$button2->pack;	# give it a default place in the main window

########################################################################
#
#	Sit in an infinite loop dispatching incoming events.
#
########################################################################

MainLoop();
