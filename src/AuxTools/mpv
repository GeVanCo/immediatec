#!/usr/bin/ksh -p

########################################################################
#
#	make versions of icc ict and libict.a in Test2
#
########################################################################

usage ()
{
    echo 'Usage:	'${0##*/}' [-dh] [ver ...]' >&2
    echo '	-d	diff icc.v in versions' >&2
    echo '	-h	this help text' >&2
    echo 'make versions of icc ict and libict.a in Test2' >&2
    echo 'from project sources of older versions in icc.v_<ver>' >&2
    echo 'if directory icc.v_<ver> does not exist, cov makes it' >&2
    echo '	$Id: mpv,v 1.4 2003/10/12 19:48:04 jw Exp $' >&2
}

while [[ $# > 0 ]]; do
    case $1 in
    -)	shift; break;;
    -*)	option=${1#?}
	while [[ -n "$option" ]]; do
	    case "$option" in
	    d*)	d=diff;;
	    h*)	usage; exit 255;;
	    *) aflag="-$option"; break;;
	    esac
	    option=${option#?}
	done;;
    *)	break;;
    esac
    shift
done

if [[ $# != 0 ]]; then
    versions=$*
else
    versions=$(echo Test2/Alex??)
fi

if [[ -n "$d" ]]; then
    for w in $versions; do
	if [[ ! -L $w ]]; then
	    v=${w##*[a-z]}
	    echo "### $v ###"
	    co -p1.$v icc.v | diff - icc.v_1.$v/icc.v
	fi
    done
    exit
fi

for w in $versions; do
    if [[ ! -L $w ]]; then
	v=${w##*[a-z]}
	echo "### $v ###"
	if [[ ! -d icc.v_1.$v ]]; then
	    cov -r1.$v icc.v
	fi
	cd icc.v_1.$v
	rm -rf *.o comp.c gram.c lexc.c LoadObjs PptcObjs LmainObjs cexe.c* scid.c core icc ict libict.a
	rm -f Makefile config.status config.log config.cache
	if [[ ! -e makeAll ]]; then ln -s ../makeAll .; fi
	if [[ -e configure ]]; then configure; fi
	if [[ $v -lt 92 ]]; then
	    makeAll
	else
	    makeAll -gctl
	fi
	cp icc ../Test2/icc$v
	cp ict ../Test2/ict$v
	cp libict.a ../Test2/libict$v.a
	if [[ -f pplstfix ]]; then
	    cp -f pplstfix ../Test2/pplstfix$v
	fi
	mkv $(archived) > ../Test2/icc$v.v
	cd ..
    fi
done
