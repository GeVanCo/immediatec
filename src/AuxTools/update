#! /bin/bash
# $Id: update,v 1.4 2007/03/02 09:00:45 jw Exp $

name=${0##*/}
vp='V'		## save directory prefix
vn='100'	## save directory start numeral
wp='W'		## branch directory prefix
wn='1'		## branch directory start numeral
vpath="$vp*"
n=''

if locked -q; then
    for d in $vpath; do
	if [ -d $d ]; then
	    nt=${d#$vp*}
	    if [[ $nt =~ '[0-9][0-9]*' ]]; then
		n=$nt
		cd $d
		if locked -vq; then
		    echo "#### $d"
		    echo "==== " $(locked -v)
		    co $(locked -v)
		fi
		cd ..
	    else
		echo "**** Warning: $name '$d' must be '$vp' followed by digits, not '$nt' - ignored"
	    fi
	fi
    done
    if [ $name = 'save' ]; then
	if [ -z $n ]; then
	    head="$vp$vn"
	    echo "#### $name $head"
	    mkdir $head
	    cd $head
	    ln -s ../RCS .
	    cd ..
	    cp -p $(locked) $head
	else
	    previous="$vp$n"
	    let n=$n+1
	    head="$vp$n"
	    if ! Mdiff -kLeq $(locked) $previous; then
		echo "#### $name $head"
		mkdir $head
		cd $head
		for f in ../$previous/*; do
		    if [ -L $f ]; then
			cp -a $f .
		    elif [ -f $f ]; then
			ln -s $f .
		    else
			echo "**** Error: $name has strange file $f - not backed up"
		    fi
		done
		rm -f $(Mdiff -Lle * ..)	# remove links to files which longer exist
		cd ..
		cp --remove-destination -p $(Mdiff -kLel $(locked) $head) $head
	    else
		echo "**** Warning: $name directory will get no new files - no $head made"
	    fi
	fi
    elif [ $name = 'branch' ]; then
	if [ -n $n ]; then
	    head="$vp$n"
	    w="$wp${n}_"
	    wpath="$w*"
	    db=''
	    for d in $wpath; do
		if [ -d $d ]; then
		    db=$d
		    cd $db
		    if locked -vq; then
			echo "#### $db"
			echo "==== " $(locked -v)
			co $(locked -v)
		    fi
		    cd ..
		fi
	    done
	    if [ -z $db ]; then
		previous=$head	# wpath is empty
		m="$wn"		# usually 1 - can be 0
	    else
		m=${db#$w*}
		previous="$w$m"
		let m=$m+1
	    fi
	    branch="$w$m"
	    if ! Mdiff -kLeq $(locked) $previous; then
		echo "#### $name $branch"
		mkdir $branch
		cd $branch
		for f in ../$previous/*; do
		    if [ -L $f ]; then
			cp -a $f .
		    elif [ -f $f ]; then
			ln -s $f .
		    else
			echo "**** Error: $name has strange file $f - not backed up"
		    fi
		done
		rm -f $(Mdiff -Lle * ..)	# remove links to files which longer exist
		cd ..
		cp --remove-destination -p $(Mdiff -kLel $(locked) $branch) $branch
	    else
		echo "**** Warning: $name directory will get no new files - no $branch made"
	    fi
	else
	    echo "**** Error: $name no 'save' has ever been done - no branch made"
	fi
    fi
else
    echo "**** Error: $name - no files are locked - nothing can be saved"
fi
